{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true, // Enable strict mode to catch type errors
    "noImplicitAny": true, // Don't allow implicit any types
    "strictNullChecks": true, // Don't allow null values where not expected
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false, // Disabled due to large number of unused variables
    "noUnusedParameters": false, // Disabled due to large number of unused parameters
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules", 
    ".next/types/**/*.ts",
    "packages/firewand/src/hooks/useStripe.ts",
    "packages/firewand/src/**/*.native.ts",
    "packages/firewand/src/**/*.native.tsx"
  ]
}
