// Search Agent - Advanced AACL Example
// Demonstrates multiple capabilities, checks, and comments

/*
 * Search Assistant Agent
 * Purpose: Perform intelligent web searches with memory
 */

agent "search-assistant" {
  intent "Perform intelligent web searches and synthesize results with context";
  
  // Core capabilities
  capability search ["web", "semantic", "fast"];
  capability memory ["recall", "store"];
  capability analysis ["summarize", "extract"];
  
  // Validation checks
  check path "output" expect "posix-safe";
  check type "capability" expect "recognized";
  check security "network" expect "https-only";
  
  // Output artifacts
  emit "results/search-results.json";
  emit "results/search-summary.md";
}
