rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Base rules
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user has admin role
    function isAdmin() {
      return request.auth != null && 
             firestore.exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'] &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isActive == true;
    }
      // Combined admin check (uses only role-based authentication)
    function hasAdminAccess() {
      return isAdmin();
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isValidContentType() {
      return request.resource.contentType.matches('image/.*') || 
             request.resource.contentType.matches('video/.*') || 
             request.resource.contentType.matches('application/pdf');
    }

    function isValidFileSize() {
      // Limit file size to 50MB
      return request.resource.size <= 50 * 1024 * 1024;
    }

    // Public files (accessible to everyone)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if hasAdminAccess();
    }

    // Course images and preview content
    match /courses/{courseId}/{allPaths=**} {
      allow read: if true; // Anyone can view course materials
      allow write: if hasAdminAccess();
    }

    // User-specific files
    match /users/{userId}/{allPaths=**} {
      allow read: if isOwner(userId) || hasAdminAccess();
      allow write: if isOwner(userId) && isValidContentType() && isValidFileSize();
    }

    // Lesson content - accessible by course owners and admins
    match /lessons/{lessonId}/{allPaths=**} {
      allow read: if isAuthenticated(); // Only authenticated users
      allow write: if hasAdminAccess();
    }

    // Profile pictures and user uploads
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isOwner(userId) && isValidContentType() && isValidFileSize();
    }

    // Admin-only area
    match /admin/{allPaths=**} {
      allow read, write: if hasAdminAccess();
    }

    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if hasAdminAccess();
    }
  }
}
